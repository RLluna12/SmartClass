<!DOCTYPE html>
<html lang="ja">

<head>
  <meta charset="UTF-8">
  <title>Redefinir senha</title>
  <link rel="stylesheet" href="/css/styles.css">
  <script>
    function validatePassword() {
      const password = document.getElementById('password').value;
      const confirmPassword = document.getElementById('confirm-password').value;
      
      if (password !== confirmPassword) {
        alert('As senhas não coincidem.');
        return false; // フォーム送信を止める
      }
      return true; // フォームを送信
    }
  </script>
</head>

<body>
  <h1>Definir nova senha</h1>
  <% if (message && message.length > 0) { %>
    <p class="error">
      <%= message %>
    </p>
  <% } %>
  <form action="/reset-password/<%= token %>" method="POST" onsubmit="return validatePassword()">
    <input type="hidden" name="userId" value="<%= userId %>">
    <input type="hidden" name="token" value="<%= token %>">
    
    <div>
      <label for="password">Nova senha:</label>
      <input type="password" name="password" id="password" required>
    </div>

    <div>
      <label for="confirm-password">Nova senha:</label>
      <input type="password" id="password2"  id="confirm-password" required>
    </div>

    <div>
      <button type="submit">Redefinir senha</button>
    </div>
  </form>
  
  <p><a href="/login">Retornar à página de login</a></p>
</body>

</html>
